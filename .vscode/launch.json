  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nest Server",
      "type": "node",
      "request": "launch",
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "restart": true,
      "runtimeExecutable": "yarn",
      "console": "externalTerminal",
      "killBehavior": "forceful",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=8192"
      },
      "runtimeArgs": [
        "start:dev"
      ],
      "skipFiles": [
        "${workspaceFolder}/server/node_modules/**/*"
      ]
    },
  ]
}